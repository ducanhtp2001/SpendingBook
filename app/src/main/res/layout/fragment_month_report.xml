<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.feature.report.MonthReportFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btnPre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/left"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:contentDescription="Ngày trước"/>

            <TextView
                android:id="@+id/tvMonthDate"
                android:layout_width="317dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/boder_edt_money"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="03/2025"
                android:textSize="25dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnAfter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/right"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:contentDescription="Ngày sau"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorCardShadow"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="15dp">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="12dp"
                app:cardCornerRadius="8dp"
                app:strokeColor="@color/colorGray"
                app:strokeWidth="1dp"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiền chi"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_marginLeft="150dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:paddingVertical="10dp"
                    android:text="0đ"
                    android:textStyle="bold"
                    android:textColor="@color/colorRed"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="12dp"
                app:cardCornerRadius="8dp"
                app:strokeColor="@color/colorGray"
                app:strokeWidth="1dp"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiền thu"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_marginLeft="150dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:paddingVertical="10dp"
                    android:text="0đ"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlue"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="12dp"
                app:cardCornerRadius="8dp"
                app:strokeColor="@color/colorGray"
                app:strokeWidth="1dp"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_marginLeft="150dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:paddingVertical="10dp"
                    android:text="0đ"
                    android:textStyle="bold"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>